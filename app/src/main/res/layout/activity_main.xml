<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo3"
    >

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="About developers..."
    android:textSize="30dp"
    android:textStyle="bold"
    android:textColor="#000000"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="25dp"
    android:onClick="developers"
    />




   <EditText
       android:id="@+id/txt_count"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Enter your count"
       android:inputType="text"
       android:textColor="#000000"
       android:textColorHint="#000000"
       android:layout_marginTop="500sp"
       android:textAlignment="center"
       />

    <EditText
        android:id="@+id/txt_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your password"
        android:layout_below="@id/txt_count"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/txt_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_below="@id/txt_pass"
        android:layout_centerHorizontal="true"
        android:background="@drawable/fondo_btn"
        android:textColor="#000000"
        android:onClick="start"
        />


</RelativeLayout>